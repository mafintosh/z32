{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*"
  ],
  "lib": [
    "es2015"
  ]
}